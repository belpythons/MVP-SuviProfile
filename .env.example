# ==============================================
# Suvi Training - Environment Configuration
# ==============================================
# Copy this file to .env and fill in the values

# ----------------------------------------------
# DATABASE
# ----------------------------------------------
# MySQL connection string
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:yourpassword@localhost:3306/suvi_training"

# ----------------------------------------------
# AUTHENTICATION (NextAuth.js v5)
# ----------------------------------------------
# Secret key for JWT signing (min 32 characters)
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-super-secret-key-min-32-characters-here"

# Base URL for NextAuth callbacks
AUTH_URL="http://localhost:3000"

# Trust host header (required for Vercel deployment)
AUTH_TRUST_HOST=true

# ----------------------------------------------
# UPLOADTHING (Image Upload Service)
# ----------------------------------------------
# Get your token from: https://uploadthing.com/dashboard
UPLOADTHING_TOKEN="your-uploadthing-token-here"
